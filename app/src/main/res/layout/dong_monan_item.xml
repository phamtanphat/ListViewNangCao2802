<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#789499"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewMonan"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="5dp"
        android:layout_width="150dp"
        android:layout_height="120dp" />
    <TextView
        android:layout_margin="5dp"
        android:textStyle="bold|italic"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:textColor="#f20"
        android:text="Tên món ăn"
        android:layout_toRightOf="@id/imageviewMonan"
        android:id="@+id/textviewTenmonan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/textviewTenmonan"
        android:layout_margin="5dp"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="#264E9E"
        android:text="Giá món ăn"
        android:layout_toRightOf="@id/imageviewMonan"
        android:id="@+id/textviewGiamonan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>